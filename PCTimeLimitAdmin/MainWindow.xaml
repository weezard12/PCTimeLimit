<Window x:Class="PCTimeLimitAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PC Time Limit Admin" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="PC Time Limit Admin Console" 
                       FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="UserInfoTextBlock" Text="Not logged in" 
                       FontSize="14" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
        
        <!-- Connection Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Button x:Name="ConnectButton" Content="Connect" Width="100" Height="30" 
                    Click="ConnectButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="LogoutButton" Content="Logout" Width="100" Height="30" 
                    Click="LogoutButton_Click" Margin="0,0,10,0"/>
            <TextBlock x:Name="ConnectionStatusText" Text="Not connected" 
                       VerticalAlignment="Center" Foreground="Gray"/>
        </StackPanel>
        
        <!-- Computers List -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <DataGrid x:Name="ComputersDataGrid" Grid.Column="0" 
                      AutoGenerateColumns="False" IsReadOnly="True"
                      SelectionMode="Single" SelectionChanged="ComputersDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Computer Name" Binding="{Binding ComputerName}" Width="150"/>
                    <DataGridTextColumn Header="Computer ID" Binding="{Binding ComputerId}" Width="200"/>
                    <DataGridTextColumn Header="Daily Limit" Binding="{Binding DailyTimeLimit}" Width="100"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding IsOnline}" Width="80"/>
                    <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <StackPanel Grid.Column="1" Margin="10,0,0,0" Width="200">
                <TextBlock Text="Computer Management" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Selected Computer:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock x:Name="SelectedComputerText" Text="None" Margin="0,0,0,15"/>
                
                <TextBlock Text="Daily Time Limit:" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="HoursTextBox" Width="50" Text="1" Margin="0,0,5,0"/>
                    <TextBlock Text="h" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="MinutesTextBox" Width="50" Text="0" Margin="0,0,5,0"/>
                    <TextBlock Text="m" VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button x:Name="UpdateTimeLimitButton" Content="Update Time Limit" 
                        Width="180" Height="30" Click="UpdateTimeLimitButton_Click" Margin="0,0,0,10"/>
                
                <Button x:Name="SetZeroButton" Content="Set Limit to 0" 
                        Width="180" Height="30" Click="SetZeroButton_Click" Margin="0,0,0,10"/>
                
                <Button x:Name="ResetTimerButton" Content="Reset Timer" 
                        Width="180" Height="30" Click="ResetTimerButton_Click" Margin="0,0,0,10"/>
                
                <Button x:Name="RefreshButton" Content="Refresh Computers" 
                        Width="180" Height="30" Click="RefreshButton_Click"/>
            </StackPanel>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
