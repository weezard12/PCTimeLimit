<Window x:Class="PCTimeLimitAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PCTimeLimit Admin - Dashboard" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#007ACC" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="PCTimeLimit Admin Dashboard" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="UserInfoTextBlock" 
                               Text="Not logged in" 
                               FontSize="12" 
                               Foreground="#E0E0E0"
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        x:Name="LogoutButton" 
                        Content="Logout" 
                        Width="80"
                        Background="#E74C3C"
                        Click="LogoutButton_Click"/>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Status Panel -->
            <Border Grid.Row="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    Effect="{DynamicResource MaterialDesignElevationShadow2}">
                <StackPanel>
                    <TextBlock Text="Connection Status" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Ellipse Grid.Column="0" 
                                 x:Name="ConnectionStatusIndicator" 
                                 Width="12" 
                                 Height="12" 
                                 Fill="Red" 
                                 Margin="0,0,10,0"/>
                        
                        <TextBlock Grid.Column="1" 
                                   x:Name="ConnectionStatusText" 
                                   Text="Disconnected" 
                                   VerticalAlignment="Center"/>
                        
                        <Button Grid.Column="2" 
                                x:Name="ConnectButton" 
                                Content="Connect" 
                                Width="100"
                                Click="ConnectButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Dashboard Content -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Effect="{DynamicResource MaterialDesignElevationShadow2}">
                <StackPanel>
                    <TextBlock Text="Dashboard" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Welcome to PCTimeLimit Admin!" 
                               FontSize="14" 
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="This is the parent control panel for managing PC time limits for children." 
                               FontSize="12" 
                               Foreground="#666666"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Features coming soon:" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <StackPanel Margin="20,0,0,0">
                        <TextBlock Text="• View connected child PCs" 
                                   FontSize="12" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• Set daily time limits" 
                                   FontSize="12" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• Monitor usage statistics" 
                                   FontSize="12" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• Remote control (lock/unlock)" 
                                   FontSize="12" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• Usage reports and analytics" 
                                   FontSize="12" 
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
