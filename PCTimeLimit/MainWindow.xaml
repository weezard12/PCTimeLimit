<Window x:Class="PCTimeLimit.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="PC Time Limit - Countdown" Height="240" Width="420" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid Margin="16">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<TextBlock Text="Remaining Time" FontSize="18" FontWeight="Bold" />

		<TextBlock x:Name="RemainingTimeText" Grid.Row="1" Text="00:00:00" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" />

		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
			<PasswordBox x:Name="PasswordBox" Width="160" Margin="0,0,8,0" />
			<Button Content="Open Control Panel" Width="160" Click="OnOpenControlPanelClick" />
		</StackPanel>
	</Grid>
</Window>


